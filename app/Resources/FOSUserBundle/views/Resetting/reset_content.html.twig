{% trans_default_domain 'FOSUserBundle' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/form_reset.css') }}">
{% endblock stylesheets %}

{% block container %}

    {% block body %}
        

    
    <div class="col-lg-offset-4 col-lg-4 form-reset">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title text-center">{{ 'resetting.email.subject'|trans()|upper }}</h3>
            </div>
            <div class="panel-body">
                {{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'fos_user_resetting_reset'
                } }) }}

                <div class="form-group">
                    {{ form_label(form.plainPassword.first) }} {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}})
                    }}
                </div>

                <div class="form-group">
                    {{ form_label(form.plainPassword.second) }} {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}})
                    }}
                </div>

                <div>
                    <input class="btn btn-primary btn-block" type="submit" value="{{ 'resetting.reset.submit'|trans }}" />
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    
    
        <div class="col-lg-4 col-lg-offset-4 text-center form-reset">
            
        </div>


    
    {% endblock body %}
{% endblock container %}

{% block javascripts %}

{% endblock javascripts %}

