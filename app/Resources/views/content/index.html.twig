{% extends 'base.html.twig' %}

{% block body %}
    <h1>Contents list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Text</th>
                <th>Datestart</th>
                <th>Dateend</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for content in contents %}
            <tr>
                <td><a href="{{ path('content_show', { 'id': content.id }) }}">{{ content.id }}</a></td>
                <td>{{ content.title }}</td>
                <td>{{ content.text }}</td>
                <td>{% if content.dateStart %}{{ content.dateStart|date('Y-m-d') }}{% endif %}</td>
                <td>{% if content.dateEnd %}{{ content.dateEnd|date('Y-m-d') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('content_show', { 'id': content.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('content_edit', { 'id': content.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('content_new') }}">Create a new content</a>
        </li>
    </ul>
{% endblock %}
