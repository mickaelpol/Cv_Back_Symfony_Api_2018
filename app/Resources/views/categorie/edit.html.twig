{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/editCat.css') }}">
{% endblock stylesheets %}

{% block container %}
    <div class="container">

        {% block body %}

            <div class="row page-header">
                <h1 class="text-center">
                    {{ 'editer.categorie'|trans({}, 'FOSUserBundle')}}
                </h1>
            </div>

            <div class="row edit-cat">
                <div class="col-lg-10 col-lg-offset-1">
                    <div class="col-lg-8 col-lg-offset-2 thumbnail">
                        <div class="col-lg-12 content-edit">
                            {{ form_start(edit_form) }}
            
                            {{ form_widget(edit_form.title, { 'attr' : {'class': 'form-control'} }) }}
                            <input class="btn btn-success btn-block" type="submit" value="{{ 'edit'|trans({}, 'FOSUserBundle')}}">
            
                            {{ form_end(edit_form) }}
                        </div>
                    </div>
                    <div class="col-lg-8 col-lg-offset-2">
                        <ul class="list-inline">
                            <li>
                                <a class="btn btn-primary" href="{{ path('homepage') }}">
                                    <i class="fa fa-arrow-circle-left"></i>
                                    Back to the homepage
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

        {% endblock %}

    </div>
{% endblock container %}
